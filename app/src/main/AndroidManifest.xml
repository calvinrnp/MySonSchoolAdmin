<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubk.mysoncrud"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".classes.helper.AppController"
        tools:replace="android:icon"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoadingScreen">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogIn"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".MainMenu"/>
        <activity android:name=".GroupMember"/>
        <activity android:name=".GroupMemberShow"/>
        <activity android:name=".Teacher"/>
        <activity android:name=".TeacherEdit"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".TeacherInsert"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Violation"/>
        <activity android:name=".ViolationInsert"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ViolationEdit"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>